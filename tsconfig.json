{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": false,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
    
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
    
        "module": "NodeNext",
        "outDir": "out",
        "sourceMap": true,
        "jsx" : "react",    
        "declaration": true,
    
        "composite": true,
        "declarationMap": true,
    
        "noEmit": true,
    
        "lib": ["es2022", "dom", "dom.iterable"],
    
      },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts"]
  }